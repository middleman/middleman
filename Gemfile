source 'https://rubygems.org'

# Build and doc tools
gem 'rake', '~> 13.2', require: false
gem 'yard', '~> 0.9.37', require: false

# Test tools
gem 'aruba', require: false
gem 'capybara', require: false
gem 'cucumber', require: false
gem 'rspec', require: false

# Debug tools
gem 'byebug'
gem 'pry'
