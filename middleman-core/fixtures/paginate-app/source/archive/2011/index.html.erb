Year: '<%#= year %>'

Paginate: <%= !!pagination %>
Article Count: <%= items.length %>
<% if pagination %>
Page Num: <%= pagination.page_number %>
Num Pages: <%= pagination.num_pages %>
Per Page: <%= pagination.per_page %>
Page Start: <%= pagination.page_start %>
Page End: <%= pagination.page_end %>
Next Page: '<%= sitemap.by_destination_path(next_page).url if next_page %>'
Prev Page: '<%= sitemap.by_destination_path(prev_page).url if prev_page %>'
<% end %>

<% items.each do |article| %>
  <article>
    <%= article.data.title %>
    <%= article.url %>
  </article>
<% end %>
