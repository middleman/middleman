Path: <%= current_page.path %>

Source: <%= current_page.file_descriptor[:full_path].sub(root + "/", "") %>

<% if current_page.parent %>
  Parent: <%= current_page.parent.path %>
<% end %>

<% current_page.children.each do |p| %>
  Child: <%= p.path %>
<% end %>

<% current_page.siblings.each do |p| %>
  Sibling: <%= p.path %>
<% end %>

<% current_page.children.each do |p| %>
  <% if p.data %>
    Data: <%= p.data.inspect %>
  <% end %>
<% end %>